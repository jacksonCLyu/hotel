<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.graduation.design.hotel.dao.IUserDao">
    <resultMap id="userVOMap" type="userVO">
        <id column="id" property="id"></id>
        <result column="user_account" property="userAccount"></result>
        <result column="user_password" property="userPassword"></result>
        <result column="user_id" property="userName"></result>
        <result column="user_name" property="userId"></result>
        <result column="user_age" property="userAge"></result>
        <result column="crate_time" property="crateTime"></result>
        <result column="update_time" property="crateTime"></result>
    </resultMap>
    <sql id="userSql">
       id,user_account,user_password,user_id,user_name,user_age,crate_time,update_time
    </sql>
    <select id="getListUser" resultMap="userVOMap">
        SELECT
        <include refid="userSql"/>
        FROM
        user
    </select>
    <select id="getUser" resultMap="userVOMap" parameterType="int">
        SELECT
        <include refid="userSql"/>
        FROM
        user
        WHERE
        id=#{id}
    </select>
    <select id="insertUser" parameterType="UserVO" resultType="int">
        INSERT INTO user (user_account,user_password,user_id,user_name,user_age,crate_time)
        values (#{userAccount}, #{userPassword}, #{userId},#{userName}, #{userAge},NOW());
        SELECT LAST_INSERT_ID() ;
    </select>
    <update id="updateUser" parameterType="UserVO">
        UPDATE user
        <set>
            <if test="userPassword != null">
                user_password = #{userPassword},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="userAge != null">
                user_age = #{userAge},
            </if>
            update_time=NOW()
        </set>
        where user_id = #{userId}
    </update>
    <delete id="deleteUser" parameterType="int">
        DELETE FROM  user WHERE id=#{id}
    </delete>
    <select id="getAdminUser" resultType="UserVO">
        SELECT <include refid="userSql"/> FROM user WHERE  user_account=#{userAccount} AND  user_password=#{userPassword}
    </select>
</mapper>